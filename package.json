{
  "name": "workato-doc-agent",
  "version": "1.0.0",
  "description": "Enterprise B2B SaaS agent that automatically documents Workato recipes",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "sync": "tsx src/index.ts sync",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "workato",
    "documentation",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^11.5.0",
    "dotenv": "^16.4.5",
    "marked": "^15.0.4",
    "node-cron": "^3.0.3",
    "@anthropic-ai/sdk": "^0.32.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
